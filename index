<body>

    <div class="container">
        <div class="brand-icon">
            <i class="fa-solid fa-cloud-arrow-down"></i>
        </div>
        <h1>Video Hunter</h1>
        <p class="subtitle">YouTube & Instagram Videolarƒ±nƒ± Saniyeler ƒ∞√ßinde ƒ∞ndir</p>

        <div class="social-badges">
            <div class="badge"><i class="fa-brands fa-youtube yt"></i> YouTube</div>
            <div class="badge"><i class="fa-brands fa-instagram ig"></i> Instagram</div>
        </div>

        <div class="input-group">
            <input type="text" id="urlInput" placeholder="Video linkini buraya yapƒ±≈ütƒ±r...">
        </div>

        <button class="main-btn" onclick="fetchVideo()" id="actionBtn">
            ƒ∞ndirme Linkini Bul
        </button>

        <i class="fa-solid fa-circle-notch loader" id="loader"></i>

        <div id="result-area">
            <div class="download-card">
                <h3 style="margin: 0 0 10px 0;">üéâ Video Hazƒ±r!</h3>
                <p style="font-size: 0.85rem; color: #ccc; margin-bottom: 15px;">A≈üaƒüƒ±daki butona tƒ±kla veya saƒü tƒ±klayƒ±p "Farklƒ± Kaydet" de.</p>
                <a href="#" id="downloadLink" target="_blank" class="success-btn">
                    <i class="fa-solid fa-download"></i> MP4 ƒ∞NDƒ∞R
                </a>
            </div>
        </div>
        
        <div id="error-area" class="error-msg"></div>
    </div>

    <script>
        // ==========================================================
        // Dƒ∞KKAT: API KEY'ƒ∞Nƒ∞ A≈ûAƒûIDAKƒ∞ TIRNAKLARIN ƒ∞√áƒ∞NE YAPI≈ûTIR
        // ==========================================================
        const API_KEY = 'BURAYA_API_KEY_GELECEK'; 
        const API_HOST = 'social-media-video-downloader.p.rapidapi.com';
        // ==========================================================

        async function fetchVideo() {
            const input = document.getElementById('urlInput');
            const btn = document.getElementById('actionBtn');
            const loader = document.getElementById('loader');
            const resultArea = document.getElementById('result-area');
            const downloadLink = document.getElementById('downloadLink');
            const errorArea = document.getElementById('error-area');

            // Temizlik
            errorArea.innerText = '';
            resultArea.style.display = 'none';

            if (!input.value) {
                errorArea.innerText = '‚ö†Ô∏è L√ºtfen ge√ßerli bir link yapƒ±≈ütƒ±rƒ±n.';
                return;
            }

            if (API_KEY === 'BURAYA_API_KEY_GELECEK') {
                errorArea.innerText = '‚ö†Ô∏è API Key eksik! Kodu d√ºzenleyip keyi ekleyin.';
                return;
            }

            // Y√ºkleniyor Animasyonu
            btn.style.display = 'none';
            loader.style.display = 'block';

            try {
                const response = await fetch(`https://${API_HOST}/smvd/get/all?url=${encodeURIComponent(input.value)}`, {
                    method: 'GET',
                    headers: {
                        'x-rapidapi-key': API_KEY,
                        'x-rapidapi-host': API_HOST
                    }
                });

                const data = await response.json();

                if (data.links && data.links.length > 0) {
                    // ƒ∞lk linki al (Genelde en kalitelisi budur)
                    const videoUrl = data.links[0].link;
                    
                    downloadLink.href = videoUrl;
                    resultArea.style.display = 'block';
                } else {
                    errorArea.innerText = '‚ùå Video bulunamadƒ±. Gizli profil veya ge√ßersiz link olabilir.';
                }

            } catch (error) {
                console.error(error);
                errorArea.innerText = '‚ùå Bir hata olu≈ütu. L√ºtfen tekrar dene.';
            } finally {
                // Eski haline getir
                loader.style.display = 'none';
                btn.style.display = 'block';
                btn.innerText = 'Yeni Video Ara';
            }
        }
    </script>
