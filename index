  <script>
    /* ============================================================
       1. SATIR SATIR YAZI ANƒ∞MASYONU
       Her satƒ±r kendi data-delay deƒüeriyle gelir
    ============================================================ */
    document.addEventListener('DOMContentLoaded', () => {
      const lines = document.querySelectorAll('.line');

      lines.forEach(line => {
        const delay = parseInt(line.dataset.delay) || 0;
        setTimeout(() => {
          line.classList.add('visible');
        }, delay);
      });
    });

    /* ============================================================
       2. PARTƒ∞KEL Sƒ∞STEMƒ∞
       Arka planda yava≈ü√ßa s√ºz√ºlen k√º√ß√ºk ye≈üil ƒ±≈üƒ±k noktalarƒ±
    ============================================================ */
    (function initParticles() {
      const canvas  = document.getElementById('particle-canvas');
      const ctx     = canvas.getContext('2d');
      let   W, H;
      const PARTICLE_COUNT = 55;
      const particles = [];

      /* Canvas boyutunu g√ºncelle */
      function resize() {
        W = canvas.width  = window.innerWidth;
        H = canvas.height = window.innerHeight;
      }
      resize();
      window.addEventListener('resize', resize);

      /* Renk paleti ‚Äî ye≈üil tonlar */
      const COLORS = [
        'rgba(0,  168, 107, ',   // emerald
        'rgba(0,  255, 153, ',   // glow green
        'rgba(29, 184, 122, ',   // light green
        'rgba(168,255,212, ',    // mint
      ];

      /* Tek bir par√ßacƒ±k */
      function Particle() {
        this.reset();
      }

      Particle.prototype.reset = function () {
        this.x     = Math.random() * W;
        this.y     = Math.random() * H;
        this.r     = Math.random() * 2.2 + 0.4;   // yarƒ±√ßap 0.4‚Äì2.6
        this.vx    = (Math.random() - 0.5) * 0.25; // yatay hƒ±z
        this.vy    = -(Math.random() * 0.35 + 0.1);// yukarƒ± doƒüru yava≈ü
        this.alpha = Math.random() * 0.6 + 0.15;
        this.alphaDir = (Math.random() > 0.5) ? 0.003 : -0.003;
        this.color = COLORS[Math.floor(Math.random() * COLORS.length)];
      };

      Particle.prototype.update = function () {
        this.x += this.vx;
        this.y += this.vy;

        /* Alpha (parlaklƒ±k) titre≈üimi */
        this.alpha += this.alphaDir;
        if (this.alpha > 0.8 || this.alpha < 0.05) {
          this.alphaDir *= -1;
        }

        /* Ekranƒ± a≈üƒ±nca sƒ±fƒ±rla */
        if (this.y < -10 || this.x < -10 || this.x > W + 10) {
          this.reset();
          this.y = H + 10; // alttan ba≈üla
        }
      };

      Particle.prototype.draw = function () {
        ctx.beginPath();
        ctx.arc(this.x, this.y, this.r, 0, Math.PI * 2);
        ctx.fillStyle = this.color + this.alpha + ')';
        ctx.fill();

        /* K√º√ß√ºk glow halkasƒ± */
        if (this.r > 1.5) {
          ctx.beginPath();
          ctx.arc(this.x, this.y, this.r * 2.5, 0, Math.PI * 2);
          ctx.fillStyle = this.color + (this.alpha * 0.18) + ')';
          ctx.fill();
        }
      };

      /* Par√ßacƒ±klarƒ± olu≈ütur */
      for (let i = 0; i < PARTICLE_COUNT; i++) {
        particles.push(new Particle());
      }

      /* Animasyon d√∂ng√ºs√º */
      function animate() {
        ctx.clearRect(0, 0, W, H);

        for (const p of particles) {
          p.update();
          p.draw();
        }

        requestAnimationFrame(animate);
      }
      animate();
    })();
  </script>
